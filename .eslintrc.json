{
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": "error",
    "no-trailing-spaces": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "indent": "error",
    "no-unused-vars": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "next/core-web-vitals",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    }
  ]
}
